{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".go|.html",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && go get"
            },
            {
                "match": ".go|.html",
                "isAsync": false,
                "cmd": "del ${workspaceRoot}\\templates.go /F /Q"
            },
            {
                "match": ".go|.html",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && go generate ./..."
            }
        ]
    }
}
